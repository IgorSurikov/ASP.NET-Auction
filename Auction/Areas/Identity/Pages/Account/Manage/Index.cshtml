@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <div>
            <p class="">Your full name: <span class="font-weight-bold">@Model.FullName</span></p>
            <p class="">Wallet: <span class="font-weight-bold">@Model.Wallet $</span></p>
        </div>
        <hr/>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.MoneyAmount"></label>
                <input asp-for="Input.MoneyAmount" class="form-control"/>
                <span asp-validation-for="Input.MoneyAmount" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Recharge the balance</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}